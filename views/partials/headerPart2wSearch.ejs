<div class = "content">
	
<div class = "d-flex flex-row flex-wrap mx-3 mb-2 justify-content-around movieBox">
			<% for (var i = 1; i <= 4; i++){ %>
			<div class = "d-none movie<%=i%> p-0 movie">
				<div class = "turn-card-over d-flex mx-auto text-center justify-content-center">More Info</div>
				<div class = "flip-card col-3 p-0">
					<div class = "flip-card-inner">
						<div class = " d-flex justify-content-center poster<%=i%> m-0 flip-card-front"></div>
						<div class="flip-card-back d-flex flex-column ">
								<div class = " d-flex justify-content-center title title<%=i%> text-center mt-0"></div>
								<div class = "d-flex justify-content-center trailerOuter<%=i%>">
									<iframe  class ="d-none trailer<%=i%>" width="350" height="350" src="" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
								</div>
								<div class = "d-flex mt-5">
									<div class = "col-4  d-flex-column justify-content-center imdb imdb<%=i%> bolderSandpit"></div>
									<div class = "col-4  d-flex-column justify-content-center metacritic metacritic<%=i%> bolderSandpit"></div>
									<div class = "col-4  d-flex-column justify-content-center rottenTomatoes rottenTomatoes<%=i%> bolderSandpit"></div>
								</div>
								<div class = "d-flex p-4">
									<div class = "col-6 d-flex flex-column">
											<div class = "bolderSandpit">GENRE</div>
											<div class = "genre genre<%=i%> mt-3"></div> 
									</div>
									<div class = "col-6 d-flex flex-column">
											<div class = "bolderSandpit">RELEASE DATE</div>
											<div class = "releaseDate releaseDate<%=i%> mt-3"></div> 
									</div>
								</div>
							
								<div class = "d-flex mb-2">
									<div class = "col-12 d-flex flex-column">
											<div class = "bolderSandpit">TIME</div>
											<div class = "runtime runtime<%=i%> mt-3"></div> 
									</div>
								</div>	
							
								<div class = "d-flex flex-column">
									<div class = "bolderSandpit text-center">PLOT AND AWARDS</div>
									<div class = "d-flex plot plot<%=i%> px-5 mt-3 justify-content-center"></div>
									<div class = "d-flex awards awards<%=i%> px-5 mt-3 justify-content-center"></div>
								</div>
							
								<div class = "d-flex p-4 mt-5">
									<div class = "col-6 d-flex flex-column">
											<div class = "bolderSandpit">ACTORS</div>
											<div class = "actors actors<%=i%> mt-3"></div> 
									</div>
									<div class = "col-6 d-flex flex-column">
											<div class = "bolderSandpit">WRITERS</div>
											<div class = "writers writers<%=i%> mt-3"></div> 
									</div>
								</div>
							
							
								<div class = "d-flex p-4">
									<div class = "col-6 d-flex flex-column">
											<div class = "bolderSandpit">BOX OFFICE</div>
											<div class = "boxoffice boxoffice<%=i%> mt-3"></div> 
									</div>
									
									<div class = "col-6 d-flex flex-column">
											<div class = "bolderSandpit">IMDB VOTES</div>
											<div class = "imdbvotes imdbvotes<%=i%> mt-3"></div> 
									</div>
								</div>
							
								<div class = "d-flex">
									<div class = "col-12 d-flex flex-column">
											<div class = "bolderSandpit">DIRECTED BY</div>
											<div class = "director director<%=i%> mt-3"></div> 
									</div>
								</div>	
							
						</div>
					</div>	
				</div>

					<form action = "/users/:id" method = "POST">
						<input class = "reviewData<%=i%>" type = "hidden" name = "reviewData" value = "">
						<input class = "ratingData<%=i%>" type = "hidden" name = "ratingData" value = "0">
						<input class = "trailerData<%=i%>" type = "hidden" name = "trailerData" value = "">
						<input class = "movieData<%=i%>" type = "hidden" name = "movieData" value = "">
						<div class = "form-group d-flex justify-content-center m-0">
							<button type = "submit" class = "btn btn-info text-center ">ADD TO MY SANDPIT</button>
						</div>	
					</form>
					<div class = "d-flex justify-content-center mt-1">
						<div  type = "button" class = "btn btn-info  text-center mr-2">RATE MOVIE!</div>
						<div  type = "button" class = "ratingHome rating<%=i%> btn btn-info  text-center mr-2"><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span></div>
						<div  type = "button" class = "removeHome removeHome<%=i%> btn btn-danger  text-center">REMOVE</div>
					</div>
			</div>
			<% } %>
		</div>