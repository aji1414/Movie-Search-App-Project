<%- include ("./partials/header") %>

<div class = "container p-0">
	<div class = "d-flex flex-wrap">
		<%foundUser.movies.forEach(function(movie){ %>
		<div class="card col-12 col-md-3 p-0 mb-4">
			<div class = "imgContainer">
			  <img class="card-img-top img-fluid" src="<%=movie.Poster%>" alt="Responsive image">
			  <div class="middle"><div class="middleText">See More Movie Info</div></div>
			</div>
				<div class="card-body text-center">
					<h5 class="card-title"><%=movie.Title%></h5>
					  <% if(!movie.UserRating){ %>
							<caption><span>You haven't rated this movie yet!</span></caption>
						<%} else{ %>
							<caption><span>You gave this movie a</span> <%=movie.UserRating%><span>/5 stars rating!</span></caption>
							<span n = "<%=parseInt(movie.UserRating)%>" class = "movieInfo text-center display-4"></span>
						<% } %>
					<!-- Trigger/Open The Modal -->
							<p class="myBtn mt-3 font-weight-bold">See More Movie Info</p>

					 <!-- The Modal -->
						<div class="modal">
						  <!-- Modal content -->
						  <div class="modal-content">
							<div class = "d-flex justify-content-center"><span class="close">&times;</span></div>
								<div class = "bg bg-white">
								
							 	</div>
						  </div>

						</div>
				</div>
		</div>
		<% }) %>
	</div>
	
</div>





<%- include ("./partials/footer") %>